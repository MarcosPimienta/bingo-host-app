{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["app/main/**/*.ts", "app/preload/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist", "app/renderer"]
}
