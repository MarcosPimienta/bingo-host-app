{
  "name": "bingo-configurator",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app/main/main.js",
  "workspaces": ["apps/configurator", "apps/game"],
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "dev:main": "tsc -w -p tsconfig.json",
    "dev:renderer": "vite",
    "electron": "wait-on tcp:5173 && wait-on dist/app/main/main.js && cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "start": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:electron\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.bingo.configurator",
    "productName": "Bingo Configurator",
    "files": ["dist/**/*","assets/**/*","themes/**/*","package.json"],
    "directories": { "buildResources": "assets" },
    "win": { "target": "nsis" },
    "mac": { "target": "dmg" }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarcosPimienta/bingo-host-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MarcosPimienta/bingo-host-app/issues"
  },
  "homepage": "https://github.com/MarcosPimienta/bingo-host-app#readme",
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
